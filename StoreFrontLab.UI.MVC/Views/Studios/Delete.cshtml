@model StoreFrontLab.DATA.EF.Studio

@{
    ViewBag.Title = "Delete "+Model.StudioName;
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudioName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudioName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete Permanently" class="btn btn-danger float-left" />
            @Html.ActionLink("Back to Studios", "Index", null, new { @class="btn btn-info float-right"})
        </div>
    }
</div>
