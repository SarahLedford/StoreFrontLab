<!-- Product Section Begin -->
@{
    StoreFrontLab.DATA.EF.VintageMediaStoreEntities db = new StoreFrontLab.DATA.EF.VintageMediaStoreEntities();
    var featuredProducts = db.Products;

}
<section class="product spad">
    <div class="container">
        <div class="row">

            @foreach (var product in featuredProducts)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 @product.Category.CategoryName">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Url.Content("~/Content/img/shop/" + product.ProductImage)">
                            <div class="product__label">
                                <span>@product.Category.CategoryName</span>
                            </div>

                        </div>
                        <div class="product__item__text">
                            <h6><a href="@Url.Action("Details", "Products", new { id = product.ProdID })">@product.ProdName</a></h6>
                            <div class="product__item__price">@string.Format("{0:c}", product.Price)</div>
                            <div class="cart_add">
                                <a href="#">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- Product Section End -->
